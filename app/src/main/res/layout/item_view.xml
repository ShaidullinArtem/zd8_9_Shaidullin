<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@color/primary">

    <ImageView
        android:id="@+id/weatherImage"
        android:layout_width="116dp"
        android:layout_height="109dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/weatherCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="0dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/weatherImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/weatherTemp"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weatherCity"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/weatherImage"
        android:text="TextView"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/weatherSeason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weatherTemp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/weatherImage"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/weatherSeasonTemp"
        android:layout_width="wrap_content"
        android:textSize="8sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weatherTemp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/weatherWind"
        android:layout_toEndOf="@+id/weatherTemp"
        android:text="TextView"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/weatherWind"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weatherTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:textColor="@color/white"
        android:layout_marginEnd="14dp"
        android:text="TextView" />

</RelativeLayout>